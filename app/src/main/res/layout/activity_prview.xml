<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olliegaus.text.prview">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Name"
        android:id="@+id/idnum"
        android:layout_below="@+id/photo"
        android:layout_alignStart="@+id/list" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/photo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/list"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/photo"
        android:layout_below="@+id/idnum">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="L"
        android:textSize="300dp"
        android:id="@+id/bigchar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/idnum"
        android:layout_alignEnd="@+id/idnum"
        android:paddingStart="70dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
